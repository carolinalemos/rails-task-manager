<div class="container">
  <div class="row">
  <div class="col-xs-6">
    <h1><%= @task.title %></h1>
  </div>
  <div class="col-xs-6">
    <%= link_to 'Edit this task', tasks_edit_path, class: "btn btn-primary" %>
  </div>
  </div>
  <p class ="task-details"><%= @task.details %></p>
  <div class="task-item">
    <% if @task.completed %>
      <i class="far fa-check-square"></i>
      <p>This task is completed</p>
    <% else %>
      <i class="far fa-square"></i>
      <p>This task is not completed yet</p>
    <% end %>
  </div>
  <%= link_to 'Back to list', tasks_path %>
</div>
