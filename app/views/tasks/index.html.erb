<div class="container">
  <h1>My tasks</h1>
  <% @tasks.each do |task| %>
  <div class="task-item">
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <p><%= link_to task.title, task_path(task) %></p>
    <%= link_to('', task_path(task),{ method: :delete, class:"far fa-trash-alt"} )%>
  </div>
  <% end %>
  <p><%= link_to "+ Add a new task", tasks_new_path %></p>

</div>
